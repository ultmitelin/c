{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++ Build",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-g",
                "-Wall",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-leasyx",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "C Build",
            "command": "gcc",
            "args": [
                "-std=c99",
                "-g",
                "-Wall",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}